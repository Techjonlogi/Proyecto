<Window x:Class="Sistema_de_Prácticas_Profesionales.Vistas.Administrador.AdministrarProfesores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sistema_de_Prácticas_Profesionales.Vistas.Administrador"
        mc:Ignorable="d"
        Title="AdministrarProfesores" Height="450" Width="800">
    <Grid>
        <Button x:Name="Agregar" Content="Agregar" HorizontalAlignment="Left" Margin="109,366,0,0" VerticalAlignment="Top" Width="75" Click="Agregar_Click"/>
        <Button x:Name="buttonEliminar"  Content="Eliminar" HorizontalAlignment="Left" Margin="597,366,0,0" VerticalAlignment="Top" Width="75" Click="buttonEliminar_Click"/>
        <Button x:Name="buttonRegresar" Content="Regresar" HorizontalAlignment="Left" Margin="711,27,0,0" VerticalAlignment="Top" Width="49" Height="49"/>
        <Button x:Name="buttonEditar" Content="Editar" HorizontalAlignment="Left" Margin="341,366,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="A continuación, la lista de los profesores ya registrados" HorizontalAlignment="Left" Margin="85,36,0,0" VerticalAlignment="Top" Height="40" Width="488" FontWeight="Bold"/>
        <DataGrid x:Name="dataProfesores" HorizontalAlignment="Left" Height="228" Margin="42,99,0,0" VerticalAlignment="Top" Width="561" CanUserAddRows="False" IsReadOnly="True"/>
        <TextBlock HorizontalAlignment="Left" Margin="625,189,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FFF90404"><Run Text="Nota:"/><LineBreak/><Run Text="Si desea eliminar un coordiandor, porfavor seleccione el numero de personal "/><Run Text="correspondiente al"/><Run Text=" coordiandor"/><LineBreak/><Run/></TextBlock>

    </Grid>
</Window>
